<Window x:Class="Revtec.core.Commands.Parameters.LinkSheetParamsToGlobalParamsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revtec.core.Commands.Parameters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<StackPanel>
			<TextBlock Text="Link Sheet Parameters to Global Parameters"
					   TextAlignment="Center"
					   FontWeight="Bold"
					   FontSize="18"
					   />

			<StackPanel Orientation="Vertical">
				<StackPanel x:Name="ParamStackPanel" Orientation="Vertical" Margin="5">
					<StackPanel Orientation="Horizontal" Margin="5">
						<TextBlock Width="240" FontWeight="Bold" Text="SHEET PARAMETER NAME"/>
						<TextBlock Width="240" FontWeight="Bold" Text="GLOBAL PARAMETER NAME"/>
					</StackPanel>
					<!-- All the names of sheet params to their matching global params go here -->
				</StackPanel>
			</StackPanel>

			<StackPanel>
				<TextBlock Text="STATS" FontSize="18" FontWeight="SemiBold"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Total Sheets: "/>
					<TextBlock x:Name="Val1"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Sheets That Have All the SheetParams: "/>
					<TextBlock x:Name="Val2"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Sheets That Have Some the SheetParams: "/>
					<TextBlock x:Name="Val3"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Sheets That Have None of the SheetParams: "/>
					<TextBlock x:Name="Val4"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="0 10 0 0">
					<TextBlock Text="Total Global Params We are going to link: "/>
					<TextBlock x:Name="Val5"/>
				</StackPanel>
				<TextBlock Text="(These are the total items in the above table)"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Total Global Params in The Project: "/>
					<TextBlock x:Name="Val6"/>
				</StackPanel>
				<TextBlock Text="(Out of all the global params we care about, this is the no. of global params this project has)"/>
			</StackPanel>

			<StackPanel Margin="0 10 0 10">
				<TextBlock Text="RESULTS" FontSize="18" FontWeight="SemiBold"/>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Successfull sheets: "/>
					<TextBlock x:Name="Val7"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Failed Sheets: "/>
					<TextBlock x:Name="Val8"/>
				</StackPanel>
			</StackPanel>


		</StackPanel>
	</Grid>
</Window>
